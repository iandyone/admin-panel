{
  "name": "admin-panel",
  "license": "UNLICENSED",
  "private": true,
  "author": {
    "name": "iandyone",
    "email": "iandyone.dev@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/iandyone/admin-panel"
  },
  "engines": {
    "node": ">=18.x"
  },
  "scripts": {
    "build:ui": "docker build -t admin-panel-ui -f ./services/admin-panel-ui/Dockerfile .",
    "build:api": "docker build -t admin-panel-api -f ./services/admin-panel-api/Dockerfile .",
    "run:ui": "docker run -dp 3000:3000 --rm --name admin-panel-ui admin-panel-ui",
    "run:api": "docker run -dp 8080:8080 --rm --name admin-panel-api admin-panel-api",
    "start:prod": "docker compose -f compose.yml up -d --build",
    "start:dev": "docker compose up -d --build",
    "stop": "docker compose down",
    "db:migrate": "cross-env DB_HOST=localhost npx prisma migrate dev --schema services/admin-panel-api/prisma/schema.prisma",
    "db:seed": "yarn workspace @services/admin-panel-api db:seed",
    "db:studio": "cross-env DB_HOST=localhost npx dotenv -e .env -- yarn workspace @services/admin-panel-api run db:studio",
    "db:push": "npx dotenv -e .env -- yarn workspace @services/admin-panel-api db:push",
    "db:deploy": "npx dotenv -e .env.prod -- yarn workspace @services/admin-panel-api db:deploy",
    "db:migrate-prod": "npx dotenv -e .env.prod -- npx prisma migrate dev --schema services/admin-panel-api/prisma/schema.prisma",
    "db:seed-prod": "npx dotenv -e .env.prod -- yarn workspace @services/admin-panel-api db:seed"
  },
  "packageManager": "yarn@4.9.1",
  "workspaces": [
    "services/*",
    "configs/*"
  ],
  "devDependencies": {
    "cross-env": "^7.0.3",
    "dotenv-cli": "^9.0.0",
    "lefthook": "^1.11.13"
  }
}
